@model EPAM.MyBlog.UI.Web.Models.LoginModel

@*<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>*@

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    @Html.Hidden("ReturnUrl",ViewData["ReturnUrl"])

    <fieldset>
        <legend>Авторизация</legend>

        <div class="row">
        <div class="col-sm-2 col-md-2 col-lg-2 col-sx-2">
            <div>
            @Html.ActionLink("Забыли пароль", "Index") 
            </div>
            <div>
             @Html.ActionLink("Регистрация", "Reg")
            </div>
        </div>


          <div class="col-sm-10 col-md-10 col-lg-8 col-sx-10 col-sm-offset-2 col-md-offset-2 col-sx-offset-2 col-lg-offset-2">

           <div class ="validation-error col-sm-8 col-md-8 col-lg-8 col-sx-8">
           @ViewData["Result"]
               </div>
            <div class="form-group col-sm-8 col-md-8 col-lg-8 col-sx-8">
                <label>
                    @Html.LabelFor(model => model.Name)
                </label>
                <div class="editor-field ">
                    @Html.EditorFor(model => model.Name)
                    <div>
                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "validation-error" })
                    </div>
                </div>
            </div>
            <div class="form-group col-sm-8 col-md-8 col-lg-8 col-sx-8">
                <label>
                    @Html.LabelFor(model => model.Password)
                </label>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Password)
                    <div>
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "validation-error" })
                    </div>
                </div>
            </div>
         <div class="form-group">
            <div class="col-sm-8 col-md-8 col-lg-8 col-sx-8">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" checked="checked" name="remember1"/>Запомнить меня
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-5 col-md-5 col-lg-5 col-sx-5">
                <button type="submit" class="btn btn-default">Log in</button>
            </div>
        </div>
        </div>
        </div>
    </fieldset>


}

@section script {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

