@model EPAM.MyBlog.UI.Web.Models.ConfirmModel

@{
    ViewBag.Title = "Delete";
}

<div class="col-sm-12 title">
    
    <div class="col-sm-6 col-md-6 col-lg-6 col-sx-6 col-sm-offset-4 col-md-offset-4 col-sx-offset-4 col-lg-offset-4">
        <p>Удаление комментария "@ViewData["name"]"</p>
    </div>
</div>
<p>Вы действиетльно хотите удалить комментарий пользователя <strong>@ViewData["name"]</strong>?</p>
@using (Html.BeginForm("DeleteComment","Admin", new{ name = ViewData["name"]}, FormMethod.Post, new { id = "ajaxform" }))
{
    <button name="Confirm" value ="true">Да</button> 
    <button name="Confirm" value ="false">Нет</button>
}

@System.Web.Optimization.Scripts.Render("~/bundles/my")
@System.Web.Optimization.Scripts.Render("~/bundles/my2")