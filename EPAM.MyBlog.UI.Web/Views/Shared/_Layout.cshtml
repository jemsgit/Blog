<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>#Blog</title>

    <!-- Bootstrap -->
      <link href="~/Content/bootstrap.css" rel="stylesheet" />
      <link href="~/Content/css/style.css" rel="stylesheet" />
      
    <!--[if lt IE]><link href="~/Content/css/ie-style.css" rel="stylesheet" type="text/css" /><![endif]--> 


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
      <!-- Стили для всех версий IE -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
      <!--[if lt IE 9]>
    <script src="jquery-1.9.0.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="jquery-2.0.0.js"></script>
    <!--<![endif]-->

  </head>
  <body>

    <div class="navbar navbar-inverse navbar-static-top" >
      <div class="container">
          <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu">
                  <span class="sr-only">Открыть</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
              <a href="@Url.Action("Index","Home")" class="navbar-brand get">
                <img src="../../Content/img/logo.png" alt="MyBlog" height ="25" />
              </a>
          </div>
          <div class="collapse navbar-collapse" id="menu">

              @Html.Action("MenuState", "Account")

              <div class="col-sm1 col-md-1 col-lg-1 pull-right">
                   <div class="btn-group">
                       @Html.Action("State", "Account")
                    </div>
              </div>

         <div class="col-sm-3 col-md-3">
                 
          @*@Html.Action("Index", "Search")*@

               </div>

          </div>
      </div>
        

  </div>

      <div class="container head shadow">
          <div class="row">
              <div class="col-lg-8 col-md-8 col-sm-8">@Html.Action("TitleState", "Account")</div>
          </div>
      </div>

        <div class="container main">
            <div class="row main">
                      <div class="col-lg-9 col-md-9 col-sm-9 shadow" id="content">@RenderBody()</div>
                      <div class="col-lg-9 col-md-9 col-sm-9 shadow hidden" id="loading"><img src="../../Content/img/09.gif" alt="" /></div>
                      <div class="col-lg-3 col-md-3 col-sm-3 shadow" id="sidebar">@Html.Action("Tags", "Search")</div>
            </div>
        </div>
      
    <footer>
        <div class="container footer">
            <div class="row">
                <div class="col-md-4">@Ajax.ActionLink("Помощь","Help", "Home", new { }, new AjaxOptions{ UpdateTargetId = "content" })</div>
                <div class="col-md-4">@Ajax.ActionLink("Контакты","Help", "Home", new { }, new AjaxOptions{ UpdateTargetId = "content" })</div>
                <div class="col-md-4">@Ajax.ActionLink("Разработчики","Help", "Home", new { }, new AjaxOptions{ UpdateTargetId = "content" })</div>
            </div>
        </div>
        
    </footer>
      

      @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
      @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")
      @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
     @* <script>
          var Links = { GetPosts: '@Url.Action("MyPosts", "Post")' }
      </script>*@
      @System.Web.Optimization.Scripts.Render("~/bundles/my")

      @RenderSection("script", false)  
          
        

  </body>
</html>